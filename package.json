{
    "name": "auth-backend",
    "version": "1.0.0",
    "description": "Secure Authentication Backend API",
    "main": "server.js",
    "imports": {
        "#config/*": "./src/config/*.ts",
        "#controllers/*": "./src/controllers/*.ts",
        "#middleware/*": "./src/middleware/*.ts",
        "#models/*": "./src/models/*.ts",
        "#routes/*": "./src/routes/*.ts",
        "#utils/*": "./src/utils/*.ts"
