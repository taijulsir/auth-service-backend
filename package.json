    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^25.1.0",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
